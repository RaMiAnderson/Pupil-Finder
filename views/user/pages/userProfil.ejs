<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pupil.Finder</title>

  <!-- All -->
  <link rel="stylesheet" href="/public/css/allstyle.css" />
  <link rel="stylesheet" href="/public/css/Burger.css">
  <link rel="stylesheet" href="/public/css/style_acceuil.css" />
  <link rel="shortcut icon" href="/public/imgs/ICON-01.svg" type="image/x-icon" />



  <link rel="stylesheet" href="/public/css/profil.css" />

 

  <!-- FontAwesome -->
  <link rel="stylesheet" href="/public/assets/FontAwesome/css/all.min.css" />
</head>

<body>
  <div class="parentMax">
    <!-- Nav Barre Vertical -->
    <div id="navVertical" class="navigation-Vertical">
      <ul>
        <li>
          <button>
            <span class="icon">
              <i class="fas fa-school sizeIcon"></i>
            </span>
            <p class="titre">ISPM Plateforme</p>
          </button>
        </li>

        <li>
          <form action="/user/profil">
            <button type="submit" id="Profil">
              <span class="icon">
                <i class="far fa-user sizeIcon"></i>
              </span>
              <p class="titre">Mon Profil</p>
            </button>
          </form>
        </li>

        <li>
          <form action="/user/annonce">
            <button type="submit" id="Annonce">
              <span class="icon">
                <i class="fas fa-bullhorn sizeIcon"></i>
              </span>
              <p class="titre">Annonces</p>
            </button>
          </form>

        </li>

        <li>
          <form action="/user/edt">
            <button id="Edt" type="submit">
              <span class="icon">
                <i class="far fa-calendar sizeIcon"></i>
              </span>
              <p class="titre">Emploie du temps</p>
            </button>
          </form>

        </li>

        <li>
          <form action="/user/absence">
            <button type="submit" id="Absence">
              <span class="icon">
                <i class="fas fa-hourglass-end sizeIcon"></i>
              </span>
              <p class="titre">Absence</p>
            </button>
          </form>

        </li>

        <li>
          <form action="/user/apayer">
            <button type="submit" id="Payer">
              <span class="icon">
                <i class="far fa-credit-card sizeIcon"></i>
              </span>
              <p class="titre">A Payer</p>
            </button>
          </form>

        </li>

        <li>
          <form action="/user/note">
            <button type="submit" id="Note">
              <span class="icon">
                <i class="far fa-file-alt sizeIcon"></i>
              </span>
              <p class="titre">Notes</p>
            </button>
          </form>

        </li>

        <li>
          <form action="/user/calendrier">
            <button type="submit" id="Agenda">
              <span class="icon">
                <i class="far fa-calendar-alt sizeIcon"></i>
              </span>
              <p class="titre">Calendrier Scolaire</p>
            </button>
          </form>

        </li>

        <li>
          <!-- SE deconnecter -->
          <form action="/user/deconnexion" method="post">
            <button id="Logout" type="submit">
              <span class="icon">
                <i class="fas fa-sign-out-alt sizeIcon"></i>
              </span>
              <p class="titre">Se Deconnecter</p>
            </button>
          </form>
        </li>
      </ul>
    </div>
    <div class="topbarMax">
      <div class="topbar">
        <div class="toggle">
          <i class="fas fa-bars Toggle1"></i>
          <i class="fas fa-xmark Toggle2"></i>
        </div>

        <div class="navHorizontal">
          <div>
            <form action="/user">
              <button type="submit" class="btnNavH home" id="versHome">
                <i class="fas fa-home navIcon"></i>
              </button>
            </form>

          </div>

          <div class="user">
            <i class="far fa-user-circle"></i>
          </div>
        </div>
      </div>
    </div>
    <!-- CONTENU -->

    <div class="main">


      <!-- ATO AMIN'I PgProfil -->
      <div id="PgProfil" class="profil">
        <div class="profil-content">
          <div class="nom">
            <i class="fas fa-user-circle img"></i>
            <p><%= dataProfil.nom %> <%= dataProfil.prenom %></p>
          </div>
          <div class="info-content">
            <div class="i">
              <div class="in">
                <p>Info Général</p>
              </div>
              <div class="txt">
                <div class="papay">
                  <p>Genre: <span><%= dataProfil.genre %></span></p>

                  <p class="p">Adresse: <span><%= dataProfil.adresseEleve %></span></p>

                  <p>Numéro Phone: <span><%= dataProfil.numeros %></span></p>
                  <p>Adresse email: <span><%= dataProfil.email %></span></p>
                </div>
              </div>
            </div>
            <div class="i">
              <div class="in">
                <p>Information suplementaire</p>
              </div>
              <div class="txt">
                <div class="papay">
                  
                  <p>Date de Naissance: <span><%= dataProfil.dateNaissance %></span></p>
                  <p class="p">Classe: <span><%= dataProfil.classe %></span></p>
                  <!-- Mila Amboarina, Num en Classe -->
                  <p>Numéro en Classe: <span> <%= dataProfil.numInClasse %> </span></p>
                  <p>Matricule: <span> <%= dataProfil.matricule %></span></p>
                </div>
              </div>
            </div>
            <div class="i">
              <div class="in">
                <p>Père</p>
              </div>
              <div class="txt">
                <div class="papay">
                  <p>Nom : <span><%= dataProfil.nomPere %></span></p>
                  <p>Proffesion: <span> <%= dataProfil.proffesionPere %></span></p>
                  <p class="p">Adresse: <span><%= dataProfil.adressePere %></span></p>
                </div>
              </div>
            </div>
            <div class="i final">
              <div class="in">
                <p>Mère</p>
              </div>
              <div class="txt">
                <div class="papay">
                  <p>Nom : <span><%= dataProfil.nomMere %></span></p>
                  <p>Proffesion: <span><%= dataProfil.proffesionMere %></span></p>
                  <p class="p">Adresse: <span><%= dataProfil.adresseMere %></span></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>



    </div>
  </div>

  <!-- =========== Scripts =========  -->

  <script src="/public/js/scriptDflt.js"></script>

  <script src="/public/assets/FontAwesome/js/all.min.js"></script>
</body>

</html>