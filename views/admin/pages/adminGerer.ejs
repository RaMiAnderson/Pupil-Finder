    <link rel="stylesheet" href="/public/css/admin/style.css" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="/public/assets/FontAwesome/css/all.min.css" />
  </head>

  <body>
    <div class="parentMax">
      <!-- Nav Barre Vertical -->
      <div id="navVertical" class="navigation-Vertical">
        <ul>
          <li>
            <button>
              <span class="icon">
                <i class="fas fa-school sizeIcon"></i>
              </span>
              <p class="titre">ISPM Plateforme</p>
            </button>
          </li>

          <li>
            <form action="/admin/gerer">
              <button type="submit" id="Profil">
                <span class="icon">
                  <i class="fas fa-cogs sizeIcon"></i>
                </span>
                <p class="titre">Gerer</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/annonce">
              <button type="submit" id="Annonce">
                <span class="icon">
                  <i class="fas fa-bullhorn sizeIcon"></i>
                </span>
                <p class="titre">Annonces</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/edt">
              <button id="Edt" type="submit">
                <span class="icon">
                  <i class="far fa-calendar sizeIcon"></i>
                </span>
                <p class="titre">Emploi du temps</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/absence">
              <button type="submit" id="Absence">
                <span class="icon">
                  <i class="fas fa-hourglass-end sizeIcon"></i>
                </span>
                <p class="titre">Absence</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/apayer">
              <button type="submit" id="Payer">
                <span class="icon">
                  <i class="far fa-credit-card sizeIcon"></i>
                </span>
                <p class="titre">A Payer</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/note">
              <button type="submit" id="Note">
                <span class="icon">
                  <i class="far fa-file-alt sizeIcon"></i>
                </span>
                <p class="titre">Notes</p>
              </button>
            </form>
          </li>

          <li>
            <form action="/admin/calendrier">
              <button type="submit" id="Agenda">
                <span class="icon">
                  <i class="far fa-calendar-alt sizeIcon"></i>
                </span>
                <p class="titre">Calendrier Scolaire</p>
              </button>
            </form>
          </li>

          <li>
            <!-- SE deconnecter -->
            <form action="/admin/deconnexion" method="post">
              <button id="Logout" type="submit">
                <span class="icon">
                  <i class="fas fa-sign-out-alt sizeIcon"></i>
                </span>
                <p class="titre">Se Deconnecter</p>
              </button>
            </form>
          </li>
        </ul>
      </div>
      <div class="topbarMax">
        <div class="topbar">
          <div class="toggle">
            <i class="fas fa-bars Toggle1"></i>
            <i class="fas fa-xmark Toggle2"></i>
          </div>

          <div class="navHorizontal">
            <div>
              <form action="/admin">
                <button type="submit" class="btnNavH home" id="versHome">
                  <i class="fas fa-home navIcon"></i>
                </button>
              </form>
            </div>

            <div class="user">
              <i class="far fa-user-circle"></i>
            </div>
          </div>
        </div>
      </div>
      <!-- CONTENU -->

      <div class="main">
        <!-- ATO AMIN'I PgProfil -->
        <div id="PgProfil" style="width: 100%; padding: 20px">
          <!-- <button><a href="/admin/add-filiere" style="text-decoration: none;">Ajout Filière</a></button>
          <button><a href="/admin/add-matiere" style="text-decoration: none;">Ajout Matiere</a></button> -->

          <!-- MATIERE -->
          <!-- Lien -->
          <div class="Gerer">
            <div class="Block-Lien">
              <div>
                <a href="#site-main">
                  <button>Utilisateur</button>
                </a>
                <a href="#site-matiere">
                  <button>Matières</button>
                </a>
                <a href="#site-classe">
                  <button>Classe</button>
                </a>
              </div>
            </div>

            <div class="Content-Gerer">
              <main id="site-main">
                <div class="container">
                  <div class="box-nav d-flex justify-between">
                    <h3>Utilisateur</h3>
                    <a href="/admin/gerer/add-user"
                      ><button class="Add-User">Ajout Utilisateur</button></a
                    >
                  </div>

                  <!-- form handling -->
                  <div class="tttt" >
                    <table class="table">
                      <thead class="thead-dark">
                        <tr>
                          <th>Rang</th>
                          <th>Nom</th>
                          <th>Email</th>
                          <th>Classe</th>
                          <th>Numero en classe</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Aodina boucle -->
                        <% for (var i = 0 ; i < data.listUsers.length ; i++){ %>
                        <tr>
                          <td><%= i + 1 %></td>
                          <td>
                            <%= data.listUsers[i].nom %> <%=
                            data.listUsers[i].prenom %>
                          </td>
                          <td class="userEmail"><%= data.listUsers[i].email %></td>
                          <td><%= data.listUsers[i].classe %></td>
                          <td><%= data.listUsers[i].numInClasse %></td>
                          <td style="display: flex; justify-content: center;">
                            
                              <form action="/admin" class="btn border-shadow update crudBtn sense-etre-a formEditEmail">
                               
                                <button type="submit" class="btn" style="background: none; "><span  class="text-gradient edit"
                                  ><i class="fas fa-pencil-alt"></i
                                ></span></button>
                              </form>
                           
                            <form action="/admin/gerer/delete-on-list" method="post" class="btn border-shadow delete crudBtn sense-etre-a formDeleteEmail">
                            
                              <button type="submit" class="btn" style="background: none;">
                                <span  class="text-gradient edit"
                                ><i class="fas fa-times"></i
                                ></span>
                              </button>
                            </form>
                            
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </main>

              <main id="site-matiere" class="Parent-matiere">
                <div class="container">
                  <div class="box-nav d-flex justify-between">
                    <h3>Ajout Matières</h3>
                    <a href="" hidden
                      ><button class="Add-User">Ajout Utilisateur</button></a
                    >
                  </div>

                  <form
                    action="/admin/gerer/add-matiere"
                    method="post"
                    style="display: flex"
                    class="formMatiere"
                  >
                    <input
                      type="text"
                      placeholder="Nom de la matière"
                      name="nomMatiere"
                      required
                    />
                    <input
                      type="text"
                      placeholder="Nom du Prof"
                      name="nomProf"
                      required
                    />
                    <input
                      type="submit"
                      class="Add-User"
                      style="color: white"
                    />
                  </form>

                  <!-- form handling -->
                  <div  class="tttt">
                    <table class="table">
                      <thead class="thead-dark">
                        <tr>
                          <th>Rang</th>
                          <th>Nom</th>
                          <th>Professeur</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody id="tabAffichageMatiere">
                        <!-- Aodina boucle -->
                        <% for (var i = 0; i < data.listMatiere.length ; i++){
                        %>
                        <tr>
                          <td><%= i + 1 %></td>
                          <td><%= data.listMatiere[i].nomMatiere %></td>
                          <td><%= data.listMatiere[i].nomProf %></td>
                          <!-- <td>
                            <a  href="" class="btn border-shadow update crudBtn"
                              ><span class="text-gradient edit"
                                ><i class="fas fa-pencil-alt"></i></span></a
                            ><a href="" class="btn border-shadow delete crudBtn"
                              ><span class="text-gradient"
                                ><i class="fas fa-times"></i></span
                            ></a>
                          </td> -->
                          <td style="display: flex; justify-content: center;">
                            
                            <form action="/admin" class="btn border-shadow update crudBtn sense-etre-a formEditMatiere">
                              <!-- <input type="email" hidden value=""> -->
                              <button type="submit" class="btn" style="background: none;"><span  class="text-gradient edit"
                                ><i class="fas fa-pencil-alt"></i
                              ></span></button>
                            </form>
                         
                            <form action="/admin/gerer/delete-on-listmatiere" method="post" class="btn border-shadow delete crudBtn sense-etre-a formDeleteMatierer ">
                              <span class="listMatiereDispo" hidden ><%= data.listMatiere[i]._id %></span>
                              <button type="submit" class="btn" style="background: none;">
                                <span  class="text-gradient edit"
                                ><i class="fas fa-times"></i
                                ></span>
                              </button>
                            </form>
                          
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </main>

              <main id="site-classe" class="Parent-classe">
                <div class="container">
                  <div class="box-nav d-flex justify-between">
                    <h3>Ajout Classe</h3>
                    <a href="" hidden
                      ><button class="Add-User">Ajout Utilisateur</button></a
                    >
                  </div>

                  <!-- Fampidirana nombre matiere -->
                  <form
                    action="/admin/gerer/nombre-matiere"
                    method="post"
                    style="display: flex"
                    class="formMatiere"
                  >
                    <input
                      type="text"
                      placeholder="Entrer le nombre des matières"
                      name="nombreMatiere"
                    />
                    <input
                      type="submit"
                      value="Créer le champs des matières"
                      class="Add-User"
                      style="color: white"
                    />
                  </form>

                  <h3 class="h3Div">Ajout Matière dans la classe</h3>
                  <!-- Mbola mila aodina boucle fa iankina am nombre matiere ampidirina -->
                  <form
                    action="/admin/gerer/add-classe"
                    method="post"
                    class="formMatiere"
                  >
                    <input
                      type="text"
                      placeholder="Nom de la classe"
                      name="nomClasse"
                      required
                    />

                    <div id="parentFormMatiere">
                      <span id="dataNombreMatiere" hidden
                        ><%= data.nombreMatiere %></span
                      >
                    </div>
                    <input
                      type="submit"
                      class="Add-User"
                      style="color: white"
                      value="Créer une classe"
                    />
                  </form>

                  <!-- form handling -->
                  <div class="tttt">
                    <table class="table">
                      <thead class="thead-dark">
                        <tr>
                          <th>Rang</th>
                          <th>Nom</th>
                          <th>Matières</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        <!-- Aodina boucle -->
                        <% for (var i = 0 ; i < data.listClasse.length ; i++){
                        %>
                        <tr>
                          <td><%= i + 1 %></td>
                          <td><%= data.listClasse[i].nomClasse %></td>
                          <td><%= data.listClasse[i].matiere.length %></td>
                          <td style="display: flex; justify-content: center;">
                            
                            <form action="/admin" class="btn border-shadow update crudBtn sense-etre-a">
                              <!-- <input type="email" hidden value=""> -->
                              <button type="submit" class="btn" style="background: none;"><span  class="text-gradient edit"
                                ><i class="fas fa-pencil-alt"></i
                              ></span></button>
                            </form>
                         
                            <form action="/admin" class="btn border-shadow delete crudBtn sense-etre-a">
                              <!-- <input type="email" hidden value=""> -->
                              <button type="submit" class="btn" style="background: none;">
                                <span  class="text-gradient edit"
                                ><i class="fas fa-times"></i
                                ></span>
                              </button>
                            </form>
                          
                          </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </main>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- =========== Scripts =========  -->

    <script src="/public/js/scriptDflt.js"></script>

    <script src="/public/assets/FontAwesome/js/all.min.js"></script>
    <script>
      const parentFormMatiereClass =
        document.getElementById("parentFormMatiere");

      fetch("/admin/gerer/getDataGerer")
        .then((res) => res.json())
        .then((data) => {
          if (document.getElementById("dataNombreMatiere").textContent !== "") {
            const nombreMatiere = parseInt(
              document.getElementById("dataNombreMatiere").textContent
            );
            const affichageMatiereParent = document.getElementById(
              "tabAffichageMatiere"
            );

            for (var i = 0; i < nombreMatiere; i++) {
              var selectMatiere = document.createElement("select");
              var inputCoeff = document.createElement("input");
              var div = document.createElement("div");

              div.id = `div${i}`;
              div.className = "inputClassM";

              // Select config : Matière
              selectMatiere.name = `nomMatiere${i}`;
              selectMatiere.id = `selectMatiere${i}`;
              selectMatiere.className = "inputSelect";

              // input texte config : Coef
              inputCoeff.type = "text";
              inputCoeff.placeholder = "Coeff";
              inputCoeff.name = `coeffMatiere${i}`;
              inputCoeff.className = "inputCoeeff";

              parentFormMatiereClass.appendChild(div);
              const parentDiv = document.getElementById(`div${i}`);

              parentDiv.appendChild(selectMatiere);
              parentDiv.appendChild(inputCoeff);

              // ----option config : Matière
              // avadika tableau ilay objet data
              var tabListMatiere = Object.values(data);
              var selectCorespondant = document.getElementById(
                `selectMatiere${i}`
              );

              for (var j = 0; j < tabListMatiere.length; j++) {
                var option = document.createElement("option");

                option.value = tabListMatiere[j].nomMatiere;
                option.textContent = tabListMatiere[j].nomMatiere;

                selectCorespondant.appendChild(option);

                // List Matiere affichage
              }
            }
          }
        });

        // CRUD USER

        const AllEmailUser = document.querySelectorAll('.userEmail');
        const AllFormEditUser = document.querySelectorAll('.formEditEmail');
        const AllFormDeleteEmail = document.querySelectorAll('.formDeleteEmail');
        
        for ( var i = 0;i < AllEmailUser.length; i++){

          var inputIdentifiant = document.createElement("input");
          
          inputIdentifiant.name = "emailDelete";
          inputIdentifiant.value = AllEmailUser[i].textContent;
          inputIdentifiant.type = "email";
          inputIdentifiant.className = "hidden";
          
          // Parent
          AllFormEditUser[i].appendChild(inputIdentifiant);
          AllFormDeleteEmail[i].appendChild(inputIdentifiant);
        };

        // CRUD MATIERE
        const AllMatiereDispo = document.querySelectorAll('.listMatiereDispo');
        const AllFormDeleteMatiere = document.querySelectorAll('.formDeleteMatierer');
        const AllFormEditMatiere = document.querySelectorAll('.formEditMatiere');

        for ( var i = 0;i < AllMatiereDispo.length; i++){

          var inputIdentifiant = document.createElement("input");
          
          inputIdentifiant.name = "matiereDelete";
          inputIdentifiant.value = AllMatiereDispo[i].textContent;
          inputIdentifiant.type = "text";
          inputIdentifiant.className = "hidden";
          
          // Parent
          AllFormEditMatiere[i].appendChild(inputIdentifiant);
          AllFormDeleteMatiere[i].appendChild(inputIdentifiant);
        };
    </script>
    
  </body>
</html>
